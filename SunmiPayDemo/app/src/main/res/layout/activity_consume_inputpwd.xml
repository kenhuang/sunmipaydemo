<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fd5a52"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/F5F5F5" />

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fd5a52"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back_rel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="@string/consume_im_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/top_bar"
        android:layout_marginRight="@dimen/balance_text_margin_up_button"
        android:layout_marginLeft="@dimen/balance_text_margin_up_button"
        android:layout_marginTop="@dimen/balance_text_margin_up_button"
        android:background="@drawable/bg_white_corner">

        <RelativeLayout
            android:id="@+id/money_rl"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/balance_text_margin_left_right"
                android:text="@string/consume_im_money"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/balance_text_margin_left_right"
                android:textColor="#FC8D89"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@id/money_rl"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/balance_text_margin_left_right"
                android:text="@string/card_number"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/balance_text_margin_left_right"
                android:text="@string/amount_of_money"
                android:textColor="@color/C666666"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_number"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="@string/input_password_hint"
        android:textColor="#999999"
        android:textSize="12sp" />

    <com.blanks.test.demo.swingcard.PasswordInputView
        android:id="@+id/passwordInputView"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/hint"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <com.blanks.test.demo.swingcard.FixPasswordKeyboard
        android:id="@+id/fixPasswordKeyboard"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>